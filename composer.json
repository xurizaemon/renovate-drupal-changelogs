{
    "name": "xurizaemon/commerce-demo",
    "description": "Drupal Commerce & Behat in CI demo, based on Centarro Commerce Kickstart 3.x project template",
    "license": "GPL-2.0-or-later",
    "type": "project",
    "authors": [
        {
            "name": "Chris Burgess",
            "role": "chris@giantrobot.co.nz"
        },
        {
            "name": "Centarro",
            "role": "info@centarro.io"
        }
    ],
    "require": {
        "php": ">=8.4 <8.5",
        "ext-curl": "*",
        "centarro/certified-projects": "^1.0.4",
        "centarro/commerce_kickstart": "^3.0",
        "composer/installers": "^2.3.0",
        "cweagans/composer-patches": "^1.7.3",
        "drupal/commerce_demo": "^3.0",
        "drupal/commerce_dps": "2.0.1",
        "drupal/core-composer-scaffold": "~10.3.0",
        "drupal/core-recommended": "~10.3.0",
        "drupal/default_content": "^2",
        "drush/drush": "^12.5.3",
        "symfony/http-client": "^6.4.26",
        "vlucas/phpdotenv": "^5.6.2",
        "webflo/drupal-finder": "^1.3.1",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "dmore/behat-chrome-extension": "^1.4",
        "drevops/behat-format-progress-fail": "^1.3.0",
        "drevops/behat-screenshot": "^1.6.0",
        "drevops/behat-steps": "^2.7.0",
        "drupal/core-dev": "~10.3.0",
        "drupal/drupal-driver": "^2.3.0",
        "drupal/drupal-extension": "^5.1.0@RC",
        "phpro/grumphp-shim": "^2.17.0",
        "squizlabs/php_codesniffer": "^3.13.5"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "repositories": {
        "commerce-dps": {
            "type": "vcs",
            "url": "https://git.drupalcode.org/project/commerce_dps.git"
        },
        "commerce_demo": {
            "type": "vcs",
            "url": "https://git.drupalcode.org/project/commerce_demo.git"
        },
        "jquery-ui-touch-punch": {
            "type": "package",
            "package": {
                "name": "furf/jquery-ui-touch-punch",
                "type": "drupal-library",
                "version": "0.2.3",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/furf/jquery-ui-touch-punch/archive/4bc009145202d9c7483ba85f3a236a8f3470354d.zip"
                }
            }
        },
        "select2": {
            "type": "package",
            "package": {
                "name": "select2/select2",
                "type": "drupal-library",
                "version": "4.1.0-rc.0",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/select2/select2/archive/refs/tags/4.1.0-rc.0.zip"
                }
            }
        },
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": [
            "load.environment.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "oomphinc/composer-installers-extender": true,
            "php-http/discovery": true,
            "phpro/grumphp-shim": true,
            "phpstan/extension-installer": true,
            "tbachert/spi": false
        },
        "platform": {
            "php": "8.4"
        },
        "sort-packages": true
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "file-mapping": {
                "[web-root]/libraries/jquery-ui-touch-punch/jquery.ui.touch-punch.min.js": "libraries/jquery-ui-touch-punch/jquery.ui.touch-punch.min.js",
                "[web-root]/libraries/select2/dist/css/select2.min.css": "libraries/select2/dist/css/select2.min.css",
                "[web-root]/libraries/select2/dist/js/select2.min.js": "libraries/select2/dist/js/select2.min.js"
            },
            "locations": {
                "web-root": "web/"
            },
            "overwrite": true
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "libraries/{$name}": [
                "furf/jquery-ui-touch-punch",
                "select2/select2"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "patchLevel": {
            "drupal/core": "-p2",
            "drupal/default_content": "-p1"
        },
        "patches": {
            "drupal/default_content": {
                "#3160146 Add a Normalizer and Denormalizer to support Layout Builder": "https://www.drupal.org/files/issues/2022-12-06/default_content-3160146-53.patch"
            }
        }
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
    }
}
