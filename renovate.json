{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:symfony"
  ],
  "branchPrefix": "deps/",
  "labels": ["dependencies"],
  "assignees": [
    "xurizaemon"
  ],
  "timezone": "Pacific/Auckland",
  "automergeSchedule": [
    "every weekend"
  ],
  "rebaseWhen": "auto",
  "baseBranches": [
    "main"
  ],
  "prConcurrentLimit": 1,
  "rangeStrategy": "bump",
  "automerge": false,
  "packageRules": [
    {
      "matchDepNames": ["php"],
      "enabled": false
    },
    {
      "groupName": "Major all - skipped to update manually",
      "matchDatasources": ["packagist"],
      "matchUpdateTypes": ["major"],
      "matchPackagePatterns": [".*"],
      "enabled": false
    },
    {
      "groupName": "Minor and patch - Drupal Core",
      "groupSlug": "minor-patch-core",
      "schedule": ["before 2am"],
      "matchDatasources": ["packagist"],
      "matchUpdateTypes": ["patch", "minor"],
      "matchDepNames": [
        "drupal/core-composer-scaffold",
        "drupal/core-dev",
        "drupal/core-project-message",
        "drupal/core-recommended"
      ],
      "prPriority": 30
    },
    {
      "groupName": "Minor and patch - Contrib",
      "groupSlug": "minor-patch-contrib",
      "matchDatasources": ["packagist"],
      "separateMinorPatch": false,
      "matchPackagePatterns": [".*"],
      "excludePackageNames": [
        "drupal/core-composer-scaffold",
        "drupal/core-dev",
        "drupal/core-project-message",
        "drupal/core-recommended"
      ],
      "prPriority": 20
    },
    {
      "groupName": "Minor and patch - NPM",
      "groupSlug": "custom-theme-npm-updates",
      "paths": ["web/themes/custom/*/package.json"],
      "schedule": ["before 2am"],
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["patch", "minor"],
      "prPriority": 30
    }
  ]
}
