{
  "assignees": [
    "xurizaemon"
  ],
  "automerge": false,
  "automergeSchedule": [
    "every weekend"
  ],
  "baseBranches": [
    "main"
  ],
  "branchPrefix": "deps/",
  "enabledManagers": [
    "composer",
    "npm",
  ],
  "extends": [
    "config:recommended",
    "group:symfony"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchDepNames": [
        "php"
      ],
      "enabled": false
    },
    {
      "matchDatasources": [
        "packagist"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false,
      "groupName": "Major all - skipped to update manually",
      "matchPackagePatterns": [
        ".*"
      ]
    },
    {
      "matchDatasources": [
        "packagist"
      ],
      "matchDepNames": [
        "drupal/core-composer-scaffold",
        "drupal/core-dev",
        "drupal/core-project-message",
        "drupal/core-recommended"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "prPriority": 30,
      "groupName": "Minor and patch - Drupal Core",
      "groupSlug": "minor-patch-core",
      "schedule": [
        "before 2am"
      ]
    },
    {
      "matchDatasources": [
        "packagist"
      ],
      "prPriority": 20,
      "excludePackageNames": [
        "drupal/core-composer-scaffold",
        "drupal/core-dev",
        "drupal/core-project-message",
        "drupal/core-recommended"
      ],
      "groupName": "Minor and patch - Contrib",
      "groupSlug": "minor-patch-contrib",
      "matchPackagePatterns": [
        ".*"
      ],
      "separateMinorPatch": false
    },
    {
      "matchDatasources": [
        "npm"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "prPriority": 30,
      "groupName": "NPM updates",
      "groupSlug": "npm-updates",
      "paths": [
        "web/modules/custom/*/package.json",
        "web/themes/custom/*/package.json"
      ],
      "schedule": [
        "before 2am"
      ]
    }
  ],
  "prConcurrentLimit": 1,
  "rangeStrategy": "bump",
  "rebaseWhen": "auto",
  "timezone": "Pacific/Auckland",
  "$schema": "https://docs.renovatebot.com/renovate-schema.json"
}
