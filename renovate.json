{
  "assignees": [
    "xurizaemon"
  ],
  "automerge": false,
  "branchPrefix": "deps/",
  "constraints": {
    "php": "^8.4"
  },
  "extends": [
    "config:recommended",
    "group:symfony"
  ],
  "ignorePresets": [
    "group:monorepos",
    "group:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "packagist"
      ],
      "matchPackageNames": [
        "/.*/",
        "!drupal/commerce_dps",
        "!drupal/core-composer-scaffold",
        "!drupal/core-dev",
        "!drupal/core-project-message",
        "!drupal/core-recommended"
      ],
      "prPriority": 10,
      "composerIgnorePlatformReqs": [
        "ext-*"
      ],
      "groupName": "Minor and patch - Contrib",
      "groupSlug": "contrib-minor-patch",
      "separateMinorPatch": false
    },
    {
      "matchDatasources": [
        "packagist"
      ],
      "matchDepNames": [
        "drupal/core-composer-scaffold",
        "drupal/core-dev",
        "drupal/core-project-message",
        "drupal/core-recommended"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "prPriority": 20,
      "composerIgnorePlatformReqs": [
        "ext-*"
      ],
      "groupName": "Patch - Drupal Core",
      "groupSlug": "core-patch"
    },
    {
      "matchDatasources": [
        "packagist"
      ],
      "matchDepNames": [
        "drupal/core-composer-scaffold",
        "drupal/core-dev",
        "drupal/core-project-message",
        "drupal/core-recommended"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "prPriority": 30,
      "composerIgnorePlatformReqs": [
        "ext-*"
      ],
      "groupName": "Minor - Drupal Core",
      "groupSlug": "core-minor"
    },
    {
      "matchDatasources": [
        "npm"
      ],
      "matchFileNames": [
        "web/themes/custom/*/package.json"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "prPriority": 40,
      "groupName": "Minor and patch - NPM",
      "groupSlug": "npm-custom-theme-minor-patch"
    }
  ],
  "prConcurrentLimit": 4,
  "rebaseWhen": "auto",
  "timezone": "Pacific/Auckland",
  "$schema": "https://docs.renovatebot.com/renovate-schema.json"
}
